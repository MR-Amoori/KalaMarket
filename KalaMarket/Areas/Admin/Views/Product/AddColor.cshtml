@model KalaMarket.DataLayer.Entities.Product.ProductColor

@{
    ViewData["Title"] = "افزودن رنگ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30">افزودن رنگ محصول</h4>

        <form asp-action="AddColor" method="post" data-parsley-validate="" novalidate="">
            <div class="form-group">
                <label asp-for="ProductColorName"></label>
                <input asp-for="ProductColorName" parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
                <span asp-validation-for="ProductColorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductColorCode"></label>
                <input asp-for="ProductColorCode" type="text" class="colorpicker-rgba form-control colorpicker-element" value="" data-color-format="rgba">
                <span asp-validation-for="ProductColorCode" class="text-danger"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت
                </button>
                <a asp-action="ShowAllColor" class="btn btn-default waves-effect waves-light m-l-5">
                    بازگشت
                </a>
            </div>

        </form>
    </div>
</div>

@section Styles
{
    <link href="~/adminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/adminPanel/assets/plugins/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <script>$('.colorpicker-rgba').colorpicker();</script>
}