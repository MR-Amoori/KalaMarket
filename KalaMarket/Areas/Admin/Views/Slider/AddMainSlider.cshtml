@model MainSlider
@{
    if (ViewData["Id"] == null)
    {
        ViewData["Title"] = "افزودن اسلایدر";
    }
    else
    {
        ViewData["Title"] = "ویرایش اسلایدر";
    }
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section Styles
{
    <style>
        div.form-group span { color: red; }
    </style>
}

<div>
    <div class="col-lg-12 mr-4 p-3">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>
            <form asp-area="Admin" asp-route-id="@ViewData["Id"]" asp-action="AddMainSlider" asp-controller="Slider" method="post" style="margin-top: 5%">
                <div class="form-group">
                    <label asp-for="SliderTitle"></label>
                    <input asp-for="SliderTitle" class="form-control"/>
                    <span asp-validation-for="SliderTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderAlt"></label>
                    <input asp-for="SliderAlt" class="form-control"/>
                    <span asp-validation-for="SliderAlt"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderLink"></label>
                    <input asp-for="SliderLink" class="form-control"/>
                    <span asp-validation-for="SliderLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderSort"></label>
                    <input asp-for="SliderSort" class="form-control"/>
                    <span asp-validation-for="SliderSort"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderImage"></label>
                    <input asp-for="SliderImage" class="form-control"/>
                    <span asp-validation-for="SliderImage"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input asp-for="IsActive" class="form-control"/>
                    <span asp-validation-for="IsActive"></span>
                </div>
                <div class="form-group text-right m-b-0">
                    @if (ViewData["Id"] == null)
                    {
                        <input type="submit" value="افزودن" class="btn btn-success"/>
                    }
                    else
                    {
                        <input type="submit" value="ویرایش" class="btn btn-warning"/>
                    }
                    <input type="reset" value="پاک کردن فرم" class="btn btn-secondary"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}