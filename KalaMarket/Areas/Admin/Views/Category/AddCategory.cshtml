@model KalaMarket.DataLayer.Entities.Product.Category
@{
    ViewData["Title"] = "افزودن گروه محصولات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">
        @if (ViewBag.id == null)
        {
            <h4 class="header-title m-t-0 m-b-30">افزودن گروه محصولات</h4>
        }
        else
        {
            <h4 class="header-title m-t-0 m-b-30">افزودن زیر گروه</h4>
        }
        <form asp-action="AddCategory" asp-area="Admin" asp-controller="Category" method="post">

            @if (ViewBag.id != null)
            {
                <input type="hidden" value="@ViewBag.id" asp-for="SubCategory"/>
            }

            <div class="form-group">
                <label asp-for="categoriFaTitle"></label>
                <input asp-for="categoriFaTitle" class="form-control" data-parsley-id="4">
                <span asp-validation-for="categoriFaTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="categoriEnTitle"></label>
                <input asp-for="categoriEnTitle" class="form-control" data-parsley-id="4">
                <span asp-validation-for="categoriEnTitle"></span>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-primary waves-effect waves-light" type="submit">
                    ثبت گروه
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    بازگشت
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}