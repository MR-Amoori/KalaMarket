@model KalaMarket.DataLayer.Entities.Product.ProductGarranty

@{
    ViewData["Title"] = "ویرایش گارانتی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30">ویرایش گارانتی</h4>

        <form asp-action="UpdateGarranty" asp-area="Admin" asp-controller="Garranty" method="post">
            
            <input type="hidden"  asp-for="ProductGarrantyId" value="@Model.ProductGarrantyId" />

            <div class="form-group">
                <label asp-for="ProductGarrantyName"></label>
                <input asp-for="ProductGarrantyName" class="form-control" data-parsley-id="4">
                <span asp-validation-for="ProductGarrantyName"></span>
            </div>

            <div class="form-group text-right m-b-0">
                <button class="btn btn-warning waves-effect waves-light" type="submit">
                    ویرایش گارانتی
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    بازگشت
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}